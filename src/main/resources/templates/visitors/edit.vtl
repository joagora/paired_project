<form action="/visitors/$visitor.getId()" method="post">
    <label for="name" id="name">Name</label>
    <input type="text" name="name" value="$visitor.getName()" required>
    <label for="username" id="username">Username</label>
    <input type="text" name="username" value="$visitor.getUsername()" required>
    <label for="email" id="email">Username</label>
    <input type="text" name="email" value="$visitor.getEmail()" required>
    <input type="submit" value="Create">
</form>